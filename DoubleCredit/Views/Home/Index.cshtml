<div>
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <div class="col-lg-11">
            <div class="navbar-brand">DoubleCredit</div>
        </div>

        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right col-lg-1" }))
        {
            @Html.AntiForgeryToken()
            <ul class="navbar-nav">
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle fa-fw"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="#">Settings</a>
                        <a class="dropdown-item" href="#">Activity Log</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                    </div>
                </li>
            </ul>
        }
    </nav>
    <div id="wrapper">
        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link">
                    <i class="fas fa-fw fa-user-alt"></i>
                    <span>My Account</span>
                </a>
            </li>
        </ul>
        <div id="content-wrapper">
            <div id="loading">
                <svg id="svg-source" height="0" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" style="position: absolute">
                    <g id="check" data-iconmelon="Simple Line Icons:62e3519b8d1506453144dd389ae63264">
                        <g>
                            <path d="M22.491,11.622l-7.915,7.632l-4.953-5.138c-0.221-0.229-0.586-0.235-0.812-0.014
					                c-0.228,0.219-0.236,0.581-0.016,0.812l5.354,5.55c0.109,0.112,0.251,0.221,0.414,0.176c0.147,0,0.291-0.06,0.398-0.162
					                l8.326-8.033c0.229-0.219,0.235-0.582,0.016-0.81C23.082,11.409,22.72,11.403,22.491,11.622z"></path>
                        </g>
                    </g>
                </svg>

                <button class="btn btn-delta-loading">
                    <i class="fa fa-plug" aria-hidden="true"></i>
                    Delta
                    <div class="icon">
                        <svg viewBox="0 0 32 32">
                            <g filter="">
                                <use xlink:href="#check"></use>
                            </g>
                        </svg>
                    </div>
                </button>

                <div class="rest"></div>
            </div>
            <div id="delta-response">

            </div>
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2018</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(".btn-delta-loading").click(function () {
            $(".btn-delta-loading").addClass("active");
            $(".rest").addClass("active");
            $(".icon").addClass("active");
            setInterval(hideLoading, 4000)
        });

        function hideLoading() {
            $("#loading").fadeOut();
            $.ajax({
                url: '/Home/GetDeltaDetails',
                success: function (html) {
                    $("#delta-response").html(html);
                    $("#delta-response").fadeIn();
                },
                error: function (error) {

                }
            });
        }
    </script>
}